<div class="container container-margin">
  <h1>New Restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
    <%= f.button :submit, class: "btn btn-primary w-100" %>
  <% end %>
</div>