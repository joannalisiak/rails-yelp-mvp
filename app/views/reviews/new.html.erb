<div class="container container-margin">
  <h1>New Review</h1>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :rating, collection: (0..5) %>
    <%= f.input :content, placeholder: "Minimum 50 characters" %>
    <%= f.button :submit, class: "btn btn-primary w-100" %>
  <% end %>
</div>